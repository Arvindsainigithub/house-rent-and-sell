<% layout('./Layouts/boilerplate.ejs') -%>
    <%= success %>
        <!-- <h1>All Listings</h1> -->
        <style>
            #filters {
                display: flex;
                flex-wrap: wrap;
            }

            .filter {
                text-align: center;
                margin-top: 1rem;
                margin-right: 2rem;
                opacity: 1;
            }

            .filter:hover {
                opacity: 0.7;
                cursor: pointer;
            }

            .filter p {
                font-size: small;
            }
        </style>

        <div id="filters">
            <div class="filter">
                <div>
                    <i class="fa-solid fa-fire"></i>
                </div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div>
                    <i class="fa-solid fa-bed"></i>
                </div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div>
                    <i class="fa-solid fa-mountain-city"></i>
                </div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <div>
                    <i class="fa-solid fa-mountain"></i>
                </div>
                <p>Moutains</p>
            </div>
            <div class="filter">
                <div>
                    <i class="fa-solid fa-chess-rook"></i>
                </div>
                <p>Castles</p>
            </div>
            <div class="filter">
                <div>
                    <i class="fa-solid fa-person-swimming"></i>
                </div>
                <p>Amazing Pools</p>
            </div>
            <div class="filter">
                <div>
                    <i class="fa-solid fa-binoculars"></i>
                </div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div>
                    <i class="fa-solid fa-money-bill-wheat"></i>
                </div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div>
                    <i class="fa-solid fa-snowman"></i>
                </div>
                <p>Arctic</p>
            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(list of result){ %>
                <a href="/listings/<%= list.id %>" class="click-link">
                    <div class="card col listing-card">
                        <img src="<%=list.image.url%>" class="card-img-top" alt="Image not working"
                            style="height: 20rem;">
                        <div class="card-body">
                            <b class="card-title">
                                <%= list.title %>
                            </b>
                            <p>
                                <span>&#8377;<%= list.price %>/ night</span>
                                <!-- .toLocaleString('en-IN') -->
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>